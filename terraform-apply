pipeline {
    agent any

    stages {
        stage('git clone') {
            steps {
                git branch: 'main', url: 'https://github.com/Seema101095/Jenkins.git'
            }
        }
        stage('terraform init') {
            steps {
                sh "terraform init"
            }
        }
        stage('terraform plan') {
            steps {
                sh "terraform plan"
            }
        }
        stage('terraform apply/destroy') {
            steps {
                sh "terraform ${params.Actions} -auto-approve"
            }
        }
    }
}
